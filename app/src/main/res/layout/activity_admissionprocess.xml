<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/loki"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admissionprocess">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <ImageView
            android:id="@+id/back5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="19dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:text="College Admission"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="405dp"
        android:layout_height="602dp"
        android:layout_marginBottom="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.0">


        <androidx.cardview.widget.CardView
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="161dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="427dp"
            android:drawableStart="@drawable/ic_web"
            android:drawablePadding="15dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="496dp"

                android:src="@drawable/docu"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/aclonica"
                android:paddingStart="14dp"
                android:text=" Document verification"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="124dp"
                android:fontFamily="@font/aclonica"
                android:paddingStart="10dp"
                android:text="Schedule"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/required_documents"
            android:layout_width="150dp"
            android:layout_height="156dp"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="182dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="63dp"
            android:drawableStart="@drawable/ic_web"
            android:drawablePadding="15dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="496dp"

                android:src="@drawable/requied"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="99dp"
                android:fontFamily="@font/aclonica"
                android:paddingStart="10dp"
                android:text="Required "
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="124dp"
                android:fontFamily="@font/aclonica"
                android:paddingStart="10dp"
                android:text="Documents"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/official_notification"
            android:layout_width="160dp"
            android:layout_height="156dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="203dp"
            android:layout_marginEnd="243dp"
            android:layout_marginBottom="243dp"
            android:drawableStart="@drawable/ic_web"
            android:drawablePadding="15dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"


                android:src="@drawable/kcetnot"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/aclonica"
                android:paddingStart="10dp"
                android:text="Download Official"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="124dp"
                android:fontFamily="@font/aclonica"
                android:paddingStart="10dp"
                android:text="Notification"
                android:textColor="@color/colorPrimary"
                android:textSize="19sp" />
        </androidx.cardview.widget.CardView>





    </RelativeLayout>

    <TextView
        android:layout_width="349dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center_vertical"
        android:text="NOTE :                                                                           Please Cross Verify Official Notification For Detailed Information and Instructions. "
        android:textColor="@color/colorRed"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.923" />

</androidx.constraintlayout.widget.ConstraintLayout>