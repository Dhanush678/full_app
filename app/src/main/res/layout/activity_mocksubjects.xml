<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loki"
    tools:context=".mocksubjects">

    <RelativeLayout
        android:id="@+id/relativeLayout33"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <ImageView
            android:id="@+id/back_mock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="-295dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:text="Mock test"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/button_v1"
        android:layout_width="160dp"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="56dp"
        android:drawableStart="@drawable/ic_web"
        android:drawablePadding="15dp"

        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_v2"
        app:layout_constraintEnd_toStartOf="@+id/button_v4"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout33"
        app:layout_constraintVertical_bias="0.411">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="496dp"

            android:src="@drawable/maths"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/aclonica"
            android:paddingStart="10dp"
            android:text="Mathematics"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_v2"
        android:layout_width="150dp"
        android:layout_height="156dp"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="258dp"
        android:drawableStart="@drawable/ic_web"
        android:drawablePadding="15dp"

        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_v3"
        app:layout_constraintEnd_toStartOf="@+id/button_v3"
        app:layout_constraintHorizontal_bias="0.623"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout33"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="496dp"

            android:src="@drawable/chemistry"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="99dp"
            android:fontFamily="@font/aclonica"
            android:paddingStart="10dp"
            android:text="Chemistry"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_v3"
        android:layout_width="160dp"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/ic_web"
        android:drawablePadding="15dp"

        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.572">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"

            android:src="@drawable/boilogypng"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/aclonica"
            android:paddingStart="10dp"
            android:text="Biology"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_v4"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="56dp"
        android:drawableStart="@drawable/ic_web"
        android:drawablePadding="15dp"

        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_v3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout33"
        app:layout_constraintVertical_bias="0.444">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"

            android:src="@drawable/physics"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/aclonica"
            android:paddingStart="10dp"
            android:text="Physics"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>